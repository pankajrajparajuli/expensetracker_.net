@page "/signup"
@inject IDataService DataService
@inject NavigationManager Nav

<h3>Create Account</h3>

<div class="form-group">
    <label>Username</label>
    <input @bind="username" class="form-control" />
</div>
<div class="form-group">
    <label>Password</label>
    <input type="password" @bind="password" class="form-control" />
</div>
<div class="form-group">
    <label>Preferred Currency</label>
    <input @bind="currency" class="form-control" />
</div>

<button class="btn btn-primary mt-3" @onclick="SaveUser">Create Account</button>

@code {
    private string username = "";
    private string password = "";
    private string currency = "USD";

    private async Task SaveUser()
    {
        var settings = new UserSettings
            {
                Username = username,
                Password = password,
                Currency = currency,
                IsLoggedIn = true
            };

        await DataService.SaveUserSettingsAsync(settings);
        Nav.NavigateTo("/dashboard");
    }
}
